extends layout

block content
  h1 To Do Items
  table
    thread
    tr
    th Description
    th Completed?
    tbody
     each item in toDoItems
       tr
          td= item.description
          td= item.completed
          td
            div.row
              if item.completed
                a(href=`incomplete/${item.id}`) Mark Incomplete
              else
                a(href=`complete/$(item.id}`) Mark Complete

  a(href="/add") Add Item
